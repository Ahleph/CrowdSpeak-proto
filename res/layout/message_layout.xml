<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <ToggleButton
            android:id="@+id/message_layout_upvote"
            android:layout_width="42dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/upvote_selector"
            android:textOff=""
            android:textOn="" />
        
        <TextView
            android:id="@+id/message_layout_numvotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />
		
		<ToggleButton
		    android:id="@+id/message_layout_downvote"
		    android:layout_width="42dp"
            android:layout_height="30dp"
		    android:layout_gravity="center"
		    android:textOn=""
    		android:textOff=""
		    android:background="@drawable/downvote_selector" />
        
    </LinearLayout>

    <TextView
        android:id="@+id/message_layout_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/message_layout_numcomments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginRight="10dp"
        android:text="50"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>